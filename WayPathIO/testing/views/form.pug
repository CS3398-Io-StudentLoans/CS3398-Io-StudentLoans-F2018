extends layout

block content
  -data = data || {}
  link(rel='stylesheet', href='stylesheets/styles.css')
  if errors
    ul.my-errors
      for error in errors
        li= error.msg

    
  form(action="." method="POST" class="form-registration")
    label(for="name") Name:
    input(
      type="text"
      id="name"
      name="name"
      class="form-control"
      value=data.name
    )

    label(for="busy") Busy Level:
    input(
      type="busy"
      id="busy"
      name="busy"
      class="form-control"
      value=data.busy
    )

    input(
      type="submit"
      value="Submit"
      class="btn btn-lg btn-primary btn-block"
    )